@model BanVeXeKhach.Models.Tinh

@{
    ViewData["Title"] = "Sua";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Thông tin tỉnh</h1>
        <a asp-action="Index" class="btn btn-dark"><i class="fa fa-arrow-left"></i> Quay lại</a>
    </div>

    <form asp-action="Sua">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="content table-responsive content">
                            <div class="panel-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="tenTinh" class="control-label"></label>
                                    <input asp-for="tenTinh" class="form-control" />
                                    <span asp-validation-for="tenTinh" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Lưu thông tin" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
